@model CouponDTO

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary text-center">Deletar Cupom</h1>
        <input asp-for="couponId" hidden />
        <hr />
        <div class="row">

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Código do Cupom</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="couponCode" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Quantidade do Desconto</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="discountAmount" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Quantidade Mínima</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="minAmount" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn-primary btn form-control"> Ver Cupons</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Deletar Cupom" class="btn-danger btn form-control" />
            </div>
        </div>
    </div>
</form>
